<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TableRow  
        android:id="@+id/tableRowItem1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
        <TextView
            android:id="@+id/CellTranslation"
            android:text="@string/CellTranslation"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:padding="5dp"
        />
	   
	 	<TextView
            android:id="@+id/CellTranslationvalue"
            android:text="Column 2"
            android:layout_width="0dp"
            android:layout_weight="0.75"
             android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    
    </TableRow>
    
    

    <TableRow 
	    android:id="@+id/CellDefinitionRow"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
    
    	<TextView
            android:id="@+id/CellDefinition"
            android:text="@string/CellDefinition"
            android:layout_width="0dp"
             android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceLarge" />
	   
	   <TextView
            android:id="@+id/CelllDefinitionValue"
            android:text="sdfgsddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:layout_width="0dp"
             android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </TableRow>
    
    
    
    <TextView
    	android:id="@+id/textViewWordValueHeader"
    	android:textSize="25sp"
    	android:layout_marginTop="10dp"
    	android:layout_marginLeft="15dp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"        
    />
    <TextView 
        android:id="@+id/textViewWordTranslation"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"     
    />
    
    <TextView 
        android:id="@+id/textViewWordDefinition"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"     
    />
    
    <TextView 
        android:id="@+id/textViewWordExample"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"     
    />
    
    
    
</TableLayout>
